import Swal from "sweetalert2";

const swalWithStyleButtons = Swal.mixin({
  customClass: {
    confirmButton:
      "py-2 px-4  border border-transparent font-medium rounded-full bg-amber-400 hover:bg-amber-400 focus:outline-none text-black m-1",
    cancelButton:
      "py-2 px-4 border border-transparent font-medium rounded-full bg-gray-400 hover:bg-gray-500 focus:outline-none text-black m-1",
  },
  buttonsStyling: false,
});

export default swalWithStyleButtons;
